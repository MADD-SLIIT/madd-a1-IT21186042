<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set the button background color -->
    <solid android:color="#2BB4D4" />

    <!-- Set the button corners to make it rounded -->
    <corners android:radius="50dp" /> <!-- Adjust the radius to make it more or less rounded -->

    <!-- Set button padding (optional for inner spacing) -->
    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>
